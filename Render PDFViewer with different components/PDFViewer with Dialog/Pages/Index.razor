@page "/"
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.PdfViewerServer

<SfButton @onclick="OnClick" >Open PDF Viewer</SfButton>
<SfDialog @ref="@dialog" AllowDragging="false"   Width="1060px" Height="100%" Visible="false"
            IsModal="true" Header="@Header" ShowCloseIcon="true">
    <DialogEvents OnOpen="OnOpen"></DialogEvents>
    <SfPdfViewerServer @ref="@viewer"  Height="100%"></SfPdfViewerServer>
</SfDialog>

@code{
    SfPdfViewerServer viewer;
    SfDialog dialog;

    //This method will open the dialog.
    public void OnClick(MouseEventArgs args)
    {
        this.dialog.ShowAsync(true);
    }

    //Triggers when the dialog is being opened.
    public void OnOpen(BeforeOpenEventArgs args)
    {
        //Loads the given PDF document in the PDF Viewer.
        viewer.LoadAsync(DocumentPath, null);
    }

    public string DocumentPath { get; set; } = "wwwroot/data/PDF_Succinctly.pdf";
    public string Header { get; set; } = "PDF Viewer";
}